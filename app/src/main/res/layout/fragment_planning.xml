<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="treizieme.com.epinoish.PlanningFragment">

    <include
        layout="@layout/content_planning"
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_gravity="center_horizontal|bottom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="461dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/module_semester" />

        <Spinner
            android:id="@+id/planning_semester_spinner"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/planning_search"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="@string/planning_search"
            android:imeOptions="actionSearch" />
    </LinearLayout>

</FrameLayout>
